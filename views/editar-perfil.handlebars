<div class="contenedor">
    <form action="/edit-profile" method="post" enctype="multipart/form-data" class="default-form">
    
        <div class="campo">
            <label for="userName">Name</label>
            <input type="text" name="userName" value="{{usuario.userName}}" placeholder="Your name" required>
        </div>
        <div class="campo">
            <label for="email">Email</label>
            <input type="email" name="email" value="{{usuario.email}}" placeholder="Your email" required>
        </div>
        <div class="campo">
            <label for="password">Current password</label>
            <input type="password" name="password" placeholder="Your password" required>
        </div>
        <div class="campo">
            <label for="avatar">Image</label>
            <input type="file" name="uploaded_file">
            <img src="uploads/perfiles/{{usuario.imagen}}" class="admin-perfil" alt="">
        </div>
        <div class="campo">
            <a href="/reset-password">Change your current password</a>
        </div>
        <div class="campo">
            <input type="submit" class="btn btn-azul" value="Save Changes">
        </div>

    </form>
</div>