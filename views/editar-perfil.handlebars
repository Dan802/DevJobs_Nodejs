<div class="contenedor">
    <form action="/edit-profile" method="POST" class="default-form">
    
        <div class="campo">
            <label for="userName">Name</label>
            <input type="text" name="userName" value="{{usuario.userName}}" placeholder="Your name" >
        </div>
        <div class="campo">
            <label for="email">Email</label>
            <input type="email" name="email" value="{{usuario.email}}" placeholder="Your email" >
        </div>
        <div class="campo">
            <label for="password">Current password</label>
            <input type="password" name="password" placeholder="Your password" >
        </div>
        <div class="campo">
            <input type="submit" class="btn btn-azul" value="Save Changes">
        </div>

    </form>
</div>