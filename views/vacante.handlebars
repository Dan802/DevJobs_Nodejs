<div class="contenido-superior vacante contenedor">
    <div class="caja">
        <div class="etiqueta">
            <p class="etiqueta">Company</p>
            <p class="nombre">{{vacante.company}}</p>
        </div>
    </div>
    <div class="caja">
        <div class="etiqueta">
            <p class="etiqueta">Ubication</p>
            <p class="nombre">{{vacante.ubication}}</p>
        </div>
    </div>
    <div class="caja">
        <div class="etiqueta">
            <p class="etiqueta">Contract</p>
            <p class="nombre">{{vacante.contract}}</p>
        </div>
    </div>
    <div class="caja">
        <div class="etiqueta">
            <p class="etiqueta">Salary</p>
            <p class="nombre">${{vacante.salary}}</p>
        </div>
    </div>
</div>

<div class="vacante-contenedor contenedor">
    <main class="contenido">
        <h2>Position's Description</h2>
        <div class="vacante-descripcion">
            {{{vacante.description}}}
        </div>

        <a href="/vacancies/edit/{{vacante.url}}" class="btn btn-azul editar-btn">Edit Vacancy</a>
    </main>

    <aside class="sidebar">
        <h2>Necessary knowledge</h2>
        <ul class="skills">
            {{#each vacante.skills}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
    </aside>
</div>

<div class="contenedor datos-reclutador">
    <div class="enviar-datos">
        <h2>Contact Recruiter</h2>
        <p>Fill the next form and upload your cv</p>

        <form action="/vacancies/{{vacante.url}}" enctype="multipart/form-data" method="POST" class="default-form">
            <div class="campo">
                <label for="userName">Name</label>
                <input type="text" name="userName" placeholder="Your name">
            </div>
            <div class="campo">
                <label for="email">Email</label>
                <input type="email" name="email" placeholder="Your email">
            </div>
            <div class="campo">
                <label for="cv">CV (PDF)</label>
                <input type="file" name="cv" accept="application/pdf">
            </div>
            <div class="campo">
                <input type="submit" value="Send" class="btn btn-verde">
            </div>
        </form>

    </div>

    <div class="infor-reclutador">
        <h2>Recruiter information </h2>
        {{#if vacante.autor.userName}}
            <p>{{vacante.autor.userName}}</p>
        {{/if}}

        {{#if vacante.autor.imagen}}
            <img src="/uploads/perfiles/{{vacante.autor.imagen}}" width="300px"></img>
        {{/if}}
    </div>
</div>