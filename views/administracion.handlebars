<div class="lista-vacantes">
    <h2>Navegation</h2>

    <div class="botones separador">
        <a href="/edit-profile" class="btn btn-azul">Edit Profile</a>
        <a href="/vacancies/new" class="btn btn-verde">New Position</a>
    </div>

    <h2>Your Positions</h2>

    <div class="panel-administracion">

        {{#if vacantes.length}}

            {{#each vacantes}}
                <div class="vacante">
                    <div class="caja">
                        <h3>{{empresa}}</h3>
                        <p class="puesto">{{title}}</p>
                    </div>
                    <div class="centrar-vertical caja">
                        <a href="/candidates/{{_id}}" class="btn btn-amarillo">Candidates</a>
                    </div>
                    <div class="centrar-vertical caja">
                        <a href="/vacancies/edit/{{url}}" class="btn btn-verde">Edit</a>
                    </div>
                    <div class="centrar-vertical caja">
                        <a data-eliminar="{{_id}}" href="#" class="btn btn-rojo">Delete</a>
                    </div>
                </div>
            {{/each}}

        {{else}}

            <p>You have not created a vacancy yet</p>

        {{/if}}
    </div>
    
</div>